<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
   android:background="#fff"
   >


<RelativeLayout
    android:paddingBottom="16dp"
    android:background="@drawable/card_bg"
    android:layout_width="match_parent"
    android:layout_marginStart="44dp"
    android:layout_marginLeft="44dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintEnd_toStartOf="parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:text="Event"
        android:textStyle="bold"
        android:textColor="#00a8ff"
        />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_event"
        android:layout_alignLeft="@+id/tv_event"
        android:layout_below="@+id/tv_event"
        android:layout_alignParentTop="true"
        android:lineSpacingExtra="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="57dp"
        android:text="Lorem ipsum dolor sit amet, luctus integer ipsum elit ac morbi proin, vel quisque vestibulum iaculis "/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:text="19/05/2019 15:00"/>


</RelativeLayout>

    <ImageView
        android:layout_width="76dp"
        android:layout_height="76dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/img"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="50dp" />

</android.support.v7.widget.CardView>


</ScrollView>